{
  "name": "foodtruck-saas",
  "version": "1.0.0",
  "private": true,
  "description": "SaaS platform for foodtruck management",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:client": "pnpm --filter @foodtruck/client dev",
    "dev:dashboard": "pnpm --filter @foodtruck/dashboard dev",
    "dev:landing": "pnpm --filter @foodtruck/landing dev",
    "build": "node scripts/validate-vercel-config.js && pnpm -r build && node scripts/combine-dist.js",
    "build:client": "pnpm --filter @foodtruck/client build",
    "build:dashboard": "pnpm --filter @foodtruck/dashboard build",
    "test": "pnpm -r test",
    "test:shared": "pnpm --filter @foodtruck/shared test",
    "test:dashboard": "pnpm --filter @foodtruck/dashboard test",
    "test:client": "pnpm --filter @foodtruck/client test",
    "test:coverage": "pnpm -r test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:client": "playwright test --project=client",
    "test:e2e:dashboard": "playwright test --project=dashboard",
    "test:e2e:mobile": "playwright test --project=client-mobile",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:prod": "E2E_BASE_URL=https://onmange.app/client playwright test --project=client",
    "verify:deployment": "bash scripts/verify-deployment.sh",
    "test:integration": "node scripts/check-integration-env.js && vitest run -c tests/integration/vitest.config.ts tests/integration/",
    "test:integration:watch": "node scripts/check-integration-env.js && vitest -c tests/integration/vitest.config.ts tests/integration/",
    "test:integration:check": "node scripts/check-integration-env.js",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:migrate": "supabase migration up",
    "supabase:gen-types": "supabase gen types typescript --local > packages/shared/src/types/database.types.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.26",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.4",
      "lodash": ">=4.17.23"
    }
  }
}
